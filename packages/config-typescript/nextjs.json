{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "paths": {
      "@/*": ["./*"],
      "@fc/ui/*": ["../../packages/ui/src/*"],
      "@fc/ui/base/*": ["../../packages/ui/src/base/*"],
      "@fc/ui/components/*": ["../../packages/ui/src/components/*"],
      "@fc/ui/hooks/*": ["../../packages/ui/src/hooks/*"],
      "@fc/ui/lib/*": ["../../packages/ui/src/lib/*"]
    }
  }
}
