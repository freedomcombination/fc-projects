{
  "name": "shadcn-ui-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "hvn": "turbo hvn",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{js,jsx,css,ts,tsx,md,json}\"",
    "storybook": "turbo run storybook --filter=@fc/ui",
    "add-component": "cd packages/ui && pnpm dlx shadcn add && pnpm lint",
    "type-check": "turbo run type-check",
    "codegen": "turbo run codegen",
    "generate:types": "turbo run generate:types"
  },
  "dependencies": {
    "@fc/ui": "workspace:*",
    "kill-port-process": "^3.2.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@fc/config-typescript": "workspace:*",
    "@turbo/gen": "^2.4.4",
    "@types/node": "^20.17.19",
    "eslint": "^9.21.0",
    "prettier": "^3.5.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.4.4",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.5.1",
  "engines": {
    "node": ">=20"
  }
}
